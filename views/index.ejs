    <div class="container">
      <h3>Enter Your Route</h3>
      <div id="map">
      </div>
      <form id="shippingAddress" method="POST" action="/">
        <div id="locationList"></div>
        <br>
        <div class="input-field">
          <input type="date" name="date">
          <label class="active" for="address">Date:</label>
        </div>
        <div class="input-field">
          <textarea class="input_fields materialize-textarea" id="address" name="description" type="text"></textarea>
          <label class="active" for="address">Description:</label>
        </div>
        <div class="input-field">
          <input class="input_fields" id="locality" name="distance" type="number">
          <label class="active" for="locality">Distance:</label>
        </div>
        <div class="input-field">
          <input class="input_fields" id="city" name="pace" type="number">
          <label class="active" for="city">Pace</label>
        </div>
        <div class="input-field">
          <input class="input_fields" id="state" name="startingpointlat" type="text" placeholder="latitude">
          <input class="input_fields" id="state" name="startingpointlong" type="text" placeholder="longitude">
          <label class="active" for="pin_code">Starting Point:</label>
        </div>
        <div class="input-field">
          <input class="input_fields" id="state" name="endpointlat" type="text" placeholder="latitude">
          <input class="input_fields" id="state" name="endpointlong" type="text" placeholder="longitude">
          <label class="active" for="landmark">End Point:</label>
        </div>
        <div class="input-field">
          <label class="active" for="State">Meeting Point 1:</label>
          <input class="input_fields" id="state" name="meetingpoint1lat" type="text" placeholder="latitude">
          <input class="input_fields" id="state" name="meetingpoint1long" type="text" placeholder="longitude">
          
        </div>
        <div class="input-field">
          <input class="input_fields" id="state" name="meetingpoint2lat" type="text" placeholder="latitude">
          <input class="input_fields" id="state" name="meetingpoint2long" type="text" placeholder="longitude">
          <label class="active" for="State">Meeting Point 2:</label>
        </div>
        <button id="showMe" type="submit" value="submit" class="btn">Submit</button>
      </form>
      
      <!-- You could add a fallback address gathering form here -->


